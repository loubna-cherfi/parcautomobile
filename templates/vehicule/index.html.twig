{% extends 'base.html.twig' %}

{% block title %}Gestion des véhicules{% endblock %}

{% block javascripts %}
    {{ parent() }}       
    {{ encore_entry_script_tags('settings_vehicule') }}
{% endblock %}

{% block body %}
<div class="main">
<div class="container">
    <div class="row">
        <div class="col-md-12 mt-3">
            <div class="row no-gutters mb-2">
                <div class="col-md-6 d-flex justify-content-start align-items-center">
                    <h5>LISTE DES VÉHICULES :</h5>
                </div>
                <div class="col-md-6 d-flex justify-content-end align-items-center ml-auto">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addVehicule">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>

             <table id="vehiculeTable" class="table table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Matricule</th>
                            <th>Modèle</th>
                            <th>Carburant</th>
                            <th>Transmission</th>
                            <th>Kilométrage</th>
                            <th>Capacité</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                    </tbody>
                </table>
        </div>    

     {# Modal Add Vehicule #}
<div class="modal right fade" id="addVehicule" role="dialog" aria-labelledby="addVehicule" aria-hidden="true">
    <div class="modal-dialog" style="width:40%" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary">AJOUTER VÉHICULE</h5>
                <button type="button" class="close" data-dismiss="modal" id="closeAddVehicule" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="matricule">Matricule</label>
                        <input type="text" class="form-control" name="matricule" id="matricule" placeholder="Matricule" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="model">Modèle</label>
                        <input type="text" class="form-control" name="model" id="model" placeholder="Modèle" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="carburant">Carburant</label>
                        <input type="text" class="form-control" name="carburant" id="carburant" placeholder="Carburant" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="transmission">Transmission</label>
                        <input type="text" class="form-control" name="transmission" id="transmission" placeholder="Transmission" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="marque_vehicule_id">Marque</label>
                        <select class="form-control" id="marque_vehicule_id" name="marque_vehicule_id" required>
                            <option value="">Sélectionner une marque</option>
                            {% for marque in marques %}
                                <option value="{{ marque.id }}">{{ marque.marque }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="type_vehicule_id">Type</label>
                        <select class="form-control" id="type_vehicule_id" name="type_vehicule_id" required>
                            <option value="">Sélectionner un type</option>
                            {% for type in types %}
                                <option value="{{ type.id }}">{{ type.libelle }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="kilometrage">Kilométrage</label>
                        <input type="number" class="form-control" name="kilometrage" id="kilometrage" placeholder="Kilométrage" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="capacite">Capacité</label>
                        <input type="number" class="form-control" name="capacite" id="capacite" placeholder="Capacité" required />
                    </div>
                </div>

                <div class="form-group">
                    <label>Status</label>
                    <div class="d-flex">
                        <div class="form-check mr-3">
                            <input class="form-check-input" type="radio" name="statusVehicule" id="actif" value="actif" checked>
                            <label class="form-check-label" for="actif">Actif</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="statusVehicule" id="inactif" value="inactif">
                            <label class="form-check-label" for="inactif">Inactif</label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer m-2">
                <button type="submit" class="btn btn-sm btn-primary saveAddVehicule ladda-button" data-spinner-size="18" data-style="expand-right">
                    <span class="ladda-label">
                        <i class="fa-regular fa-floppy-disk"></i> Enregistrer
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>


 {# Modal Update Vehicule #}
<div class="modal right fade" id="updateVehicule" role="dialog" aria-labelledby="updateVehicule" aria-hidden="true">
    <div class="modal-dialog" style="width:40%" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary">MODIFIER VÉHICULE</h5>
                <button type="button" class="close" data-dismiss="modal" id="closeUpdateVehicule" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="idVehicule" id="idVehicule" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="matriculeUpd">Matricule</label>
                        <input type="text" class="form-control" name="matriculeUpd" id="matriculeUpd" placeholder="Matricule" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="modelUpd">Modèle</label>
                        <input type="text" class="form-control" name="modelUpd" id="modelUpd" placeholder="Modèle" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="carburantUpd">Carburant</label>
                        <input type="text" class="form-control" name="carburantUpd" id="carburantUpd" placeholder="Carburant" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="transmissionUpd">Transmission</label>
                        <input type="text" class="form-control" name="transmissionUpd" id="transmissionUpd" placeholder="Transmission" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="marque_vehicule_id_upd">Marque</label>
                        <select class="form-control" id="marque_vehicule_id_upd" name="marque_vehicule_id_upd" required>
                            <option value="">Sélectionner une marque</option>
                            {% for marque in marques %}
                                <option value="{{ marque.id }}">{{ marque.marque }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="type_vehicule_id_upd">Type</label>
                        <select class="form-control" id="type_vehicule_id_upd" name="type_vehicule_id_upd" required>
                            <option value="">Sélectionner un type</option>
                            {% for type in types %}
                                <option value="{{ type.id }}">{{ type.libelle }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="kilometrageUpd">Kilométrage</label>
                        <input type="number" class="form-control" name="kilometrageUpd" id="kilometrageUpd" placeholder="Kilométrage" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="capaciteUpd">Capacité</label>
                        <input type="number" class="form-control" name="capaciteUpd" id="capaciteUpd" placeholder="Capacité" required />
                    </div>
                </div>

                <div class="form-group">
                    <label>Status</label>
                    <div class="d-flex">
                        <div class="form-check mr-3">
                            <input class="form-check-input" type="radio" name="statusVehiculeUpd" id="actifUpd" value="actif" checked>
                            <label class="form-check-label" for="actifUpd">Actif</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="statusVehiculeUpd" id="inactifUpd" value="inactif">
                            <label class="form-check-label" for="inactifUpd">Inactif</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer m-2">
                <button type="submit" class="btn btn-sm btn-primary saveUpdateVehicule ladda-button" data-spinner-size="18" data-style="expand-right">
                    <span class="ladda-label">
                        <i class="fa-regular fa-floppy-disk"></i> Enregistrer
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>


{% endblock %}
