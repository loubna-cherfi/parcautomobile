{% extends 'base.html.twig' %}

{% block title %}Choix du dossier{% endblock %}

{% block stylesheets %}
            {{ parent() }}
            {{ encore_entry_link_tags('siteStyle') }}
        {% endblock %}

{% block javascripts %}
            {{ parent() }}
            {{ encore_entry_script_tags('setting_site') }}

{% endblock %}


{% block body %}

<header class="header" id="header">
    <div class="header_toggle ">
    </div>
    <div class="profile mt-3">
        <ul class="d-flex align-items-center">
        
        {% if app.session.get('dossier') %}
        <li class=" mr-3">
            <a href="/app" class="d-flex align-items-center navBarIcons">
            
            <i class="fas fa-folder"></i>
                <span class="ml-2 small moduleHeader"> 
                    {# {{app.session.get('dossier').prefix}} #}
                </span>
            </a>
        </li>

        <li class=" mr-3">
            <a href="/dossier/module/{{app.session.get('dossier').id}}" class="navBarIcons">
            <i class="fas fa-gear"></i> 
            </a>
        </li>
        {% endif %}
        <li class="nav-item me-3 me-lg-0 dropdown">
        
            <button class="nav-link dropdown-toggle" id="navbarDropdown">
            
            <i class="fas fa-user"></i> {{app.user.username}}
            </button>
            <div class="dropdown-menu" id="divMenu">
                <a class="dropdown-item" href="{{path('app__profile')}}"><i class="fa-solid fa-pen-to-square"></i><span>Profile</span></a>
                {# <a class="" href="#"><i class="fa-solid fa-gear"></i> Param√©tres</a> #}
                <a class="dropdown-item" href="{{path('app_logout')}}"><i class="fa-solid fa-right-from-bracket"></i><span>Decconexion</span></a>

            </div>
        </li>
    </ul>
    </div>
</header>

<div class="container d-flex justify-content-center align-items-start" style="padding-top: 15% !important;">
    <div class="card pb-5 pt-3 w-50">
        <div class="card-body">
            <h4 class="card-title">CHOIX DE SITE :</h4>
            <select class="form-control shadow-none" aria-label="Default select example" id="site" name="site">
                <option value="" selected>CHOIX DE SITE :</option>
                {% for dossier in sites %}
                <option value="{{dossier.id}}">{{dossier.title}}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>


{% endblock %}