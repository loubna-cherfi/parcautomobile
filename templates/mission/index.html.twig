{% extends 'base.html.twig' %}

{% block title %}Gestion des missions{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('mission') }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('settings_mission') }}
{% endblock %}

{% block body %}
<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mt-3">
        <div class="row no-gutters mb-2">
          <div class="col-md-6 d-flex justify-content-start align-items-center">
            <h5>LISTE DES MISSIONS :</h5>
          </div>
        </div>

        <table id="missionTable" class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Demande</th>
              <th>Dossier</th>
              <th>Observation </th>
              <th>Bénéficiaire</th>
              <th>CIN</th>
              <th>Contact</th>
              <th>Date mission</th>
              <th>N Personnes</th>
              <th>Adresse Depart</th>
              <th>Tarif Total</th>
               <th>Date Évaluation</th>
              <th>Note Évaluation</th>
              <th>Statut</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
           
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- MODAL ÉVALUATION MISSION (une seule, hors boucle) -->

<div class="modal fade" id="evaluerMissionModal" tabindex="-1" role="dialog" aria-labelledby="evaluerMissionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm modal-dialog-centered" role="document" style="width: 500px;">
    <div class="modal-content p-3">
      <div class="modal-header">
        <h6 class="modal-title text-primary" id="evaluerMissionModalLabel">Évaluer la mission</h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="">
            <span aria-hidden="true">&times;</span>
      </div>
      <div class="modal-body text-center">
        <div id="starRating" class="mb-3">
          {% for i in 1..5 %}
            <i class="fa fa-star fa-3x star" data-value="{{ i }}" style="cursor:pointer; color: #ccc;"></i>
          {% endfor %}
        </div>
        <input type="hidden" id="noteEvaluation" value="0">
        <button id="submitEvaluation" class="btn btn-primary btn-block">Envoyer</button>
      </div>
    </div>
  </div>
</div>


<!-- MODALS DÉTAILS MISSION (une par mission) -->
{% for mission in missions %}
  <div class="modal right fade" id="detailMissionModal{{ mission.id }}" tabindex="-1" aria-labelledby="detailMissionModalLabel{{ mission.id }}" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-primary" id="detailMissionModalLabel{{ mission.id }}" >Détails de la mission {{ mission.id }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <table class="table table-bordered table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Prestation</th>
                {# <th>Type de prestation</th>
                <th>Adresse d'arrivée</th> #}
                <th>Conducteur</th>
                <th>Véhicule</th>
                <th>Nb Personnes</th>
                <th>Quantité</th>
                <th>Kilométrage</th>
                <th>Jawaz</th>
                <th>Carburant</th>
                <th>Tarif Unique</th>
              </tr>
            </thead>
            <tbody>
              {% for detail in detailsParMission[mission.id]|default([]) %}
                <tr>
                  <td>{{ detail.id}}</td>
                  <td>{{ detail.prestation ? detail.prestation.nomPrestation : '—' }}</td>
                  {# <td></td>
                  <td></td> #}
                  <td>{{ detail.conducteurId ? detail.conducteurId.nom : '—' }}</td>
                  <td>{{ detail.vehiculeId ? detail.vehiculeId.matricule : '—' }}</td>
                  <td>{{ detail.nbPersonne }}</td>
                  <td>{{ detail.quantite }}</td>
                  <td>{{ detail.kilometrage }}</td>
                  <td>{{ detail.jawaz }}</td>
                  <td>{{ detail.carburant }}</td>
                  <td>{{ detail.tarifUnique }}</td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="7" class="text-center">Aucun détail disponible</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
{% endblock %} 